@model IEnumerable<Nurgül_Eylül_Aydoğan_201103046.DAL.Cozumler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Çözümler Yönetimi</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.resimyolu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bilgi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sira)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.baslik)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.resimyolu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bilgi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sira)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.id }, new { @class = "btn btn-success" }) |
            
            @Html.ActionLink("Sil", "Delete",new { id = item.id }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
